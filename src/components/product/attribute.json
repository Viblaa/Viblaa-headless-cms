    "unit": {
      "type": "string",
      "maxLength": 20
    },
    "is_filterable": {
      "type": "boolean",
      "default": false
    },
    "is_searchable": {
      "type": "boolean",
      "default": false
    },
    "display_order": {
      "type": "integer",
      "default": 0
    }
